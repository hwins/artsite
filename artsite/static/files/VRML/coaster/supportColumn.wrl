#VRML V2.0 utf8

# supportColumn.wrl - this is a single support column for the
# track. It is used in supportColumns.wrl (plural)

Group {
    children [
        # pole of support column
        Shape {
            appearance Appearance {
                material Material {
                    diffuseColor 0.9 0.8 0.7
                    specularColor 0.2 0.5 0.3
                    ambientIntensity 3
                    shininess 0.5
                }
            }
            geometry Cylinder {
                radius 0.1
                height 100
            }
        }
        # support platform
        Transform {
            translation 0.0 50.0 0.0
            scale 1.4 0.6 1.4
            children [
                Shape {
                    appearance Appearance {
                        material Material {
                            ambientIntensity .003
                            shininess .11
                            diffuseColor .8 .1 .1
                            specularColor .4 .2 .2
                        }
                    }
                    geometry Sphere { }
                }
            ]
        }
    ]
}